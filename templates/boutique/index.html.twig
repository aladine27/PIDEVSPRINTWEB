{% extends 'base.html.twig' %}

{% block title %}Boutique index{% endblock %}

{% block body %}
    <h1>Boutique index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdBo</th>
                <th>NomBo</th>
                <th>AdresseBo</th>
                <th>LatB</th>
                <th>LongB</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for boutique in boutiques %}
            <tr>
                <td>{{ boutique.idBo }}</td>
                <td>{{ boutique.nomBo }}</td>
                <td>{{ boutique.adresseBo }}</td>
                <td>{{ boutique.latB }}</td>
                <td>{{ boutique.longB }}</td>
                <td>
                    <a href="{{ path('app_boutique_show', {'idBo': boutique.idBo}) }}">show</a>
                    <a href="{{ path('app_boutique_edit', {'idBo': boutique.idBo}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_boutique_new') }}">Create new</a>
{% endblock %}
